<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="info">

	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>

	<!-- the targets to write to -->
	<targets>
		<!-- write logs to file  -->
		<target xsi:type="File" name="UsersActionsLog"
                fileName="${basedir}\Logs\UsersActionsLog-${shortdate}.log"
                layout="${event-properties:TransactionId} | TimeStamp: ${longdate} | ${Custom-Layout} | LogLevel: ${uppercase:${level}} | Message: ${message}"></target>
	</targets>

	<variable name="basedir" value="${basedir:default=Directory.GetCurrentDirectory()}" />
	<variable name="TransactionId"  value="${guid}" />
	<!-- rules to map from logger name to target -->
	<rules>
		<!--All logs, including from Microsoft-->
		<logger name="*" levels="Debug , Error" writeTo="UsersActionsLog" />

		<!--Skip non-critical Microsoft logs and so log only own logs-->
		<logger name="Microsoft.*" maxLevel="Info" final="true" />
		<!-- BlackHole without writeTo -->
		<logger name="*" minlevel="Trace" writeTo="ownFile-web" />
	</rules>
</nlog>